#!/bin/bash
echo "ðŸ”„ Starting RessoMusic..."

# Ensure Python output is unbuffered
export PYTHONUNBUFFERED=1

# Run Python with safe asyncio & uvloop setup
python3 - <<'EOF'
import asyncio
import uvloop
import runpy

# -----------------------------
# Ensure an event loop exists
try:
    asyncio.get_running_loop()
except RuntimeError:
    loop = asyncio.new_event_loop()
    asyncio.set_event_loop(loop)

uvloop.install()
# -----------------------------

# Run your bot module
runpy.run_module("RessoMusic", run_name="__main__")
EOF
